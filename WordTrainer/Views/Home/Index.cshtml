@model IEnumerable<WordTrainer.Models.Word>
@using WordTrainer.Models;

<br />
<div class="container">
    @{ 
        if (Model == null)
        {
            <h3>Dictionary is empty!</h3>
        }
        else
        {
            <table class="table table-striped table-bordered table-hovered">
                <thead class="bg-primary">
                    <tr >
                        <th class="text-center">Word</th>
                        <th class="text-center">Translation</th>
                        <th class="text-center">Examples</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="font-weight-bold">@item.Text</td>
                        <td>
                            @foreach (var w in item.Translation)
                            {
                                @w<br />
                            }
                        </td>
                        <td>
                            @foreach (var w in item.Examples)
                            {
                                @w<br />
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>


