<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Words Trainer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Site.css"/>
</head>
<body>
    <!--Navigation menu-->
    <div>
        <nav class="navbar navbar-expand-lg navbar-light text-dark bg-light fixed-top">
            <div class="container-fluid">
                <!--Brand-->
                <a asp-action="Index" asp-controller="Home" class="navbar-brand font-weight-bold">Words Trainer</a>
                <!--Collapse button-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--Menu-->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-lg-0">
                        <!--Item 1-->
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <!--Item 2-->
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Train" asp-controller="Home">Trainer</a>
                        </li>
                        <!--Item 3-->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AddWord", "Words")">Add word</a>
                        </li>
                        <!--Item 4-->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Words")">List</a>
                        </li>
                        <!--Item 5-->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Search", "Words")">Search</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </div>

    <!--Body-->
    <div>
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
