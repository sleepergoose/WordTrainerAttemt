<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Words Trainer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Site.css"/>
</head>
<body>
    <!--Navigation menu-->
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <!--Brand-->
                <a asp-action="Index" asp-controller="Home" class="navbar-brand font-weight-bold">Words Trainer</a>
                <!--Collapse button-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--Menu-->
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-lg-0">
                        <!--Item 1-->
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <!--Item 2-->
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Trainer</a>
                            <div class="dropdown-menu  bg-dark" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item nav-link pl-3" asp-action="TrainEn" asp-controller="Home">Trainer EN</a>
                                <a class="dropdown-item nav-link pl-3" asp-action="TrainRu" asp-controller="Home">Trainer RU</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item nav-link pl-3" asp-action="Train3000En" asp-controller="Home">Trainer 3000 EN</a>
                                <a class="dropdown-item nav-link pl-3" asp-action="Train3000Ru" asp-controller="Home">Trainer 3000 RU</a>
                            </div>
                        </li>
                        <!--Item 5-->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AddWord", "Words")">Add</a>
                        </li>
                        <!--Item 6-->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List", "Words")">List</a>
                        </li>
                        <!--Item 7-->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Search", "Words")">Search</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </div>

    <!--Body-->
    <div>
        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
